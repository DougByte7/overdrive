{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "target": "esnext",
    "jsx": "preserve",
    "outDir": "build",
    "removeComments": true,
    "strict": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
